# Mobile Interaction MCP Environment Variables
# Copy to .env and fill in your actual tokens

# MCP Authentication
MCP_AUTH_KEY=mobile-interaction-mcp-auth-key-2025

# WhatsApp Business API (Meta or provider)
WHATSAPP_API_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Telegram Bot API (easiest to start with)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI (for voice transcription)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Cloudflare Resources (will be auto-configured during deployment)
CONVERSATION_STATE_KV_ID=your-kv-namespace-id
TRAVEL_AGENT_DB_ID=your-d1-database-id